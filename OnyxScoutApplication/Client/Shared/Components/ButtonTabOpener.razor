@inject IJSRuntime JsRuntime

<SfButton CssClass="@CssClass" style="@Style"
          @onclick="@(async () => await JsRuntime.InvokeVoidAsync("open", Url, "_blank"))">
        @Text
    </SfButton>

@code {
    [Parameter]
    public string CssClass { get; set; }
    [Parameter]
    public string Url { get; set; }
    [Parameter]
    public string Text { get; set; }
    [Parameter]
    public string Style { get; set; }
}
