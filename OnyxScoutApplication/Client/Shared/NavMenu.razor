<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">OnyxScoutApplication</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </li>
        <AuthorizeView Roles="@(Roles.Scouter)">
            <li class="nav-item px-3">
                <NavLink class="nav-link" href="EventAnalytics">
                    <span class="oi oi-list-rich" aria-hidden="true"></span> Event analytics
                </NavLink>
            </li>
        </AuthorizeView>
        <AuthorizeView Roles="@(Roles.Admin)">
            <li class="nav-item px-3">
                <NavLink class="nav-link" href="EventAnalytics/Settings">
                    <span class="oi oi-list-rich" aria-hidden="true"></span> Event analytics settings
                </NavLink>
            </li>
        </AuthorizeView>
        <AuthorizeView Roles="@(Roles.Admin)">
            <li class="nav-item px-3">
                <NavLink class="nav-link" href="ScoutFormFormats">
                    <span class="oi oi-list-rich" aria-hidden="true"></span> Scout form formats
                </NavLink>
            </li>
        </AuthorizeView>
        <AuthorizeView Roles="@(Roles.Admin)">
            <li class="nav-item px-3">
                <NavLink class="nav-link" href="ScoutForms">
                    <span class="oi oi-list-rich" aria-hidden="true"></span> Scout forms
                </NavLink>
            </li>
        </AuthorizeView>
        <AuthorizeView Roles="@(Roles.Owner)">
            <li class="nav-item px-3">
                <NavLink class="nav-link" href="UsersManager">
                    <span class="oi oi-list-rich" aria-hidden="true"></span> Manage users
                </NavLink>
            </li>
        </AuthorizeView>
    </ul>
</div>

@code {
    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

}
