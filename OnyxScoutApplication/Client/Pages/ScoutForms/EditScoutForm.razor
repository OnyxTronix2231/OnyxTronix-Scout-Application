@page "/ScoutForm/Edit/{Id:int}"
@inject HttpClientManager Http
@inject NavigationManager NavigationManager
@attribute [OnyxAuthorize(Role = Role.Admin)]

@if (scoutForm != null)
{
    <h3>ScoutForm</h3>
    <ScoutFromComponent ScoutForm="scoutForm" Type="FormType.Update" OnValidSubmit="OnValidSubmit"></ScoutFromComponent>
}

@code {

    [Parameter]
    public int Id { get; set; }

    [CascadingParameter]
    public Task<AuthenticationState> AuthenticationStateTask { get; set; }

    private ScoutFormDto scoutForm;

    protected override async Task OnInitializedAsync()
    {
        scoutForm = await Http.GetJson<ScoutFormDto>("ScoutForm/ " + Id);
        if (scoutForm == null)
        {
            NavigationManager.NavigateTo("/");
        }
    }

    private async Task OnValidSubmit()
    {
        if (await Http.TryPutJson("ScoutForm/" + Id, scoutForm))
        {
            NavigationManager.NavigateTo("/");
        }
    }

}
